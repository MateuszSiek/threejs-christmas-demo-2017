{
  "compilerOptions"               : {
	//	"module"          : "umd",
	"module"          : "commonjs",
	"target"          : "es5",
	"lib"             : [ "es2016", "dom", "es5" ],
	"sourceMap"       : true,
	"strict"          : true,
	"moduleResolution": "node",
	"typeRoots"       : [ "node_module/@types" ],
	"watch"           : false,
	"outDir"          : "./dist",
	"noImplicitAny"   : false
  },
  "include"                       : [
	"./src"
  ],
  "exclude"                       : [
	"node_modules"
  ],
  "awesomeTypescriptLoaderOptions": {
	"useWebpackText"    : true,
	"useTranspileModule": true,
	"doTypeCheck"       : true,
	"forkChecker"       : true
  }
}